.append
javascript:
	$(function() {
		console.log( $('#get_game').html() );
		$.ajax({
		 type: "GET",
		 dataType: "json",
		 data: { tags: "5 דקות" },
		 url: "/filter_tag",
		 success: function(data){
			 // console.log(data);
			 $('#get_game').html(data[0].name)
			 $('#get_description').html(data[0].description)
			 $('#get_how_to').html(data[0].how_to)
			 $.each(data, function( index, game ) {
				  console.log(game.name);
					$('.append').append(
						"<div class='form-games bg-primary h-12v form-rounded text-center text-white games-move-up'><i class='fas fa-grip-lines fa-2x grip'></i><h2 class='game-name pt-2 mt-2 display-4' id='get_game'>" + game.name + "</h2><div class='flex justify-content-center w-100 align-items-center flex-column'><div class='description game-attrs w-75 text-right' id='get_description' style='display: inline-block;'>" + game.description + "</div><div class='how-to game-attrs w-75 text-right' id='get_how_to' style='display: inline-block;'>איך משחקים</div></div></div>"
					)
				});
			 // $('#show_hearts_' + heart_id).html(data.hearts)
		 }
	  })
	});
	$(".grip").click(function(event) {
		console.log("animate");
		$(".form-games").toggleClass('games-move-up')
		$(".form").toggleClass('question-move-up')
		$(".game-attrs").toggleClass('d-none').css('display', 'inline-block');
		$(".game-name").toggleClass('mt-2 display-4')
	});
